{
  "name": "domlint-ui",
  "description": "DOMLint UI (React)",
  "homepage": "https://github.com/guoyunhe/domlint-ui#readme",
  "bugs": {
    "url": "https://github.com/guoyunhe/domlint-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guoyunhe/domlint-ui.git"
  },
  "funding": "https://github.com/sponsors/guoyunhe",
  "license": "MIT",
  "author": {
    "name": "Guo Yunhe",
    "email": "i@guoyunhe.me"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rive build",
    "build:watch": "rive build --watch",
    "ci:eslint": "eslint -f json src -o ./.ci/eslint.json",
    "lint": "eslint . && stylelint \"**/*.{css,less,scss}\"",
    "lint:fix": "prettier --write . && eslint --fix . && stylelint --fix \"**/*.{css,less,scss}\"",
    "prepare": "husky",
    "start": "rive start",
    "test": "rive test",
    "test:ui": "rive test --ui",
    "test:watch": "rive test --watch"
  },
  "commitlint": {
    "extends": [
      "ali"
    ]
  },
  "lint-staged": {
    "*.{cjs,cts,js,jsx,mjs,mts,ts,tsx,vue}": "eslint --fix",
    "*.{css,less,scss}": "stylelint --fix",
    "*.{cjs,css,cts,html,js,json,jsx,less,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}": "prettier --write"
  },
  "prettier": "prettier-config-ali",
  "stylelint": {
    "extends": [
      "stylelint-config-ali",
      "stylelint-prettier/recommended"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@mdx-js/react": "^3.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.17.29",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.5",
    "commitlint-config-ali": "^1.1.0",
    "eslint": "^9.23.0",
    "eslint-config-ali": "^16.1.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "prettier-config-ali": "^1.3.2",
    "react": "^18.3.1",
    "react-doc-ui": "^2.3.0",
    "react-dom": "^18.3.1",
    "rive": "^3.0.1",
    "stylelint": "^16.17.0",
    "stylelint-config-ali": "^2.1.2",
    "stylelint-prettier": "^5.0.3",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "rive": {
    "template": "react",
    "doc": {
      "basename": "/domlint-ui/"
    }
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "domlint": "^0.4.0"
  },
  "version": "0.4.1"
}
